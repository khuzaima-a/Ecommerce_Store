<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/auth.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main class="auth-main">
  <div>
    <% if (errorMessage) { %>
      <p class="error-message"><%= errorMessage %></p>
    <% } else { %>
      <h1 class="auth-heading">Welcome Back!</h1>
    <% } %>
    

  <form action="/login" method="POST" class="login-form">
    <fieldset>
      <label for="email">Email*</label>
      <input type="email" name="email" id="email" value="<%= oldInput.email %>" required/>
    </fieldset>

    <fieldset>
      <label for="password">Password*</label>
      <input type="password" name="password" id="password" minlength="5" value="<%= oldInput.password %>" required  />
    </fieldset>

    <button type="submit" class="auth-btn">Login</button>
  </form>

    <p class="signup-string">Not a member yet? <a href="/signup">Sign up</a></p>
    </div>
</main>
<%- include('../includes/end.ejs') %>
