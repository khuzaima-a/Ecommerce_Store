<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/auth.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main class="auth-main">
  <% if (errorMessage) { %>
      <p class="error-message"><%= errorMessage %></p>
    <% } else { %>
    <h1 class="auth-heading">Create Account</h1>
    <% } %>

  <form action="/signup" method="POST" class="login-form">
    <fieldset>
      <label for="name">Full Name*</label>
      <input type="text" name="name" id="name" minlength="2" value="<%= oldInput.name %>" required  />
    </fieldset>

    <fieldset>
      <label for="email">Email*</label>
      <input type="email" name="email" id="email" value="<%= oldInput.email %>" required/>
    </fieldset>

    <fieldset>
      <label for="password">Password*</label>
      <input type="password" name="password" id="password" minlength="5" value="<%= oldInput.password %>" required  />
    </fieldset>

    <fieldset>
      <label for="confirm-password">Confirm Password*</label>
      <input type="password" name="confirmPassword" id="password" minlength="5" value="<%= oldInput.confirmPassword %>" required  />
    </fieldset>


    <button type="submit" class="auth-btn">Sign up</button>
  </form>

    <p class="signup-string">Already a member? <a href="/login">Log in</a></p>
</main>
<%- include('../includes/end.ejs') %>
