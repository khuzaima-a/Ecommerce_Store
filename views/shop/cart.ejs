<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/empty-cart.css" />
<link rel="stylesheet" href="/css/card.css" />
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main class="shop-main">
  <% if(products.length > 0) { %>
  <section class="cards" style="margin-bottom: 30px;">
    <% for(let p of products) { %>
    <article class="card">
      <img class="card-img" src="/<%= p.productId.imgUrl %>" alt="Product" />
      <div class="card-header">
        <h1 class="card-title"><%= p.productId.title %></h1>
        <h3 class="card-price">$<%= p.productId.price %></h3>
      </div>
      <div class="card-desc" style="text-align: center;">
        Quantity: <%= p.quantity %><br />
        Total: $<%= p.productId.price * p.quantity %>
    </div>
      <div class="action_btns double-btn">
        <a class="btn btn-1" href="/products/<%= p.productId._id %>"
          >Details</a
        >
        <form action="/cart-delete-item" method="POST" class="btn-2">
          <input type="hidden" , value="<%= p.productId._id %>" name="id" />
          <button class="btn del-btn">Delete</button>
        </form>
      </div>
    </article>
    <% } %>
  </section>
   <form action="/post-order" method="post" class="order-now-btn">
    <button class="btn" type="submit">Order Now</button>
   </form>
  <% } else { %>
  <%- include('../includes/empty-cart.ejs') %>
