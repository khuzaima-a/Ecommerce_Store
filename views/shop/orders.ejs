<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/orders.css" />
</head>
<body>
<%- include('../includes/nav.ejs') %>
    <main class="shop-main">
        <% if(orders.length > 0) { %>
        <section class="orders-list">
            <div class="orders-template">
                <h4>Title</h4>
                <h4>Quantity</h4>
                <h4 style="border-right: 0px;">Price</h4>
            </div>
            <% for(let order of orders) { %>
                <div style="width: 100%;">
                <div class="order-metadata">
                    <p class="order-id">Order # <%= order._id %></p>
                    <p class="totalPrice">Total Cost: $<%= order.totalPrice %>
                        &nbsp
                        <a href="/orders/<%=order._id%>" >
                            <i class="fa fa-download" style="font-size:15px;color:#495E57;"></i>
                        </a>
                    </p>
                    
                </div>
                <article class="order">
                    <% for(let p of order.products) { %>
                        <div class="item">
                            <h1 class="item-title itemData"><%= p.product.title %></h1>
                            <h3 class="item-qnty-price itemData"><%= p.quantity %> </h3>
                            <h3 class="item-price itemData">$<%= p.product.price %></h3>
                        </div>
                    <% } %>
                </article>
                </div>
            <% } %>
        </section>
        <% } else { %>
            <p class="shop-content">No Orders Yet!</p>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
